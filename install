#!/usr/bin/env bash

PROFILE_REPO="https://github.com/pliljenberg/environment.git"
ENVIRONMENT_PATH="tools/environment"

if ! type -p git; then
  echo "'git' command not found. Please install git first."
  exit 1
fi

cd "$HOME"
mkdir -p $ENVIRONMENT_PATH
git clone $PROFILE_REPO $ENVIRONMENT_PATH

echo "Cloned to ${ENVIRONMENT_PATH}"
